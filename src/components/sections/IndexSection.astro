---
import Maincontainer from "../MainContainer.astro";
---

<Maincontainer id="main" className="h-5/6 mx-44 ">
    <div class="flex justify-between items-center">
        <div class="animate-fade-up">
            <h2 class="text-6xl">
                Hi! I'm Ramón <br>
                Hernández.
            </h2>
            <span>(a.k.a Monki)</span>
        </div>
        <ul class="text-2xl w-1/4">
            <li class="animate-fade-right ">
                <a class="border-solid border-b-2 border-gray-300 mt-5 mb-2 py-2 flex justify-between" href="#projects">
                    Projects 
                    <img class="hidden" src="/right-arrow.svg"/>
                </a>
            </li>
            <li class="animate-fade-right">
                <a class="border-solid border-b-2 border-gray-300 mt-5 mb-2 py-2 flex justify-between" href="#about">
                    About 
                    <img class="hidden" src="/right-arrow.svg"/>
                </a>
            </li>
            <li class="animate-fade-right">
                <a class="border-solid border-b-2 border-gray-300 mt-5 mb-2 py-2 flex justify-between" href="#stack">
                    Stack 
                    <img class="hidden" src="/right-arrow.svg"/>
                </a>
            </li>
        </ul>
    </div>
    <div class="w-1/3 my-10 text-2xl animate-fade-up">
        I make products with quality as my main goal. 
    </div>
</Maincontainer>
<style>
    @keyframes in {
        0% {
            transform: translateX(-100%);
            opacity: 0;
           
            }
        100% {
                transform: translateX(0%);
                opacity: 100;
               
            }
    }

    @keyframes out {
        
        0% {
            transform: translate(0%);
            opacity: 100;
        }
        100% {
            transform: translate(-100%);
            opacity: 0;
        }
    }

    @keyframes border-in {
      0%{
        border-color: rgb(209 213 219 / 1);
      }
      100%{
        border-color: rgb(107 114 128 / 1);
      }
    }

    @keyframes border-out {
      0%{
        border-color: rgb(107 114 128 / 1);
      }
      100%{
       border-color: rgb(209 213 219 / 1);
      }
    }

    .border-in {
        border-color: rgb(107 114 128 / 1);
        animation-name: border-in;
        animation-duration: 0.5s;
        animation-timing-function: ease-in-out;
    }

    .border-out {
        border-color: rgb(209 213 219 / 1);
        animation-name: border-out;
        animation-duration: 0.5s;
        animation-timing-function: ease-in-out;
    }

    .in{
        animation-name: in;
        animation-duration: 0.5s;
        animation-timing-function: ease-in-out;
    } 

    .out{
        animation-name: out;
        animation-duration: 0.5s;
        animation-timing-function: ease-in-out;
    }
</style>
<script>
import { $$, $ } from "../../../lib/query";

    const projectsIndex = $$('a', $('#main'))
    
    projectsIndex.forEach(function(item: HTMLAnchorElement){
        const arrow = $('img', item)
        
        item.addEventListener('mouseover', () =>{
            item.classList.add('border-in')
            arrow.classList.remove('hidden')
            arrow.classList.add('in')
        })

        item.addEventListener('mouseout', () => {
            item.classList.remove('border-in')
            item.classList.add('border-out')
            arrow.classList.remove('in')
            arrow.classList.add('out')
            setTimeout(() => {
                item.classList.remove('border-out')
                arrow.classList.remove('out')
                arrow.classList.add('hidden')
            }, 500) 
        })
    })
</script>